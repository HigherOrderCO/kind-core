// Calculates the modulo (remainder) of dividing one Bits sequence by another.
// - a: The dividend (Bits sequence).
// - b: The divisor (Bits sequence).
// = The remainder of a divided by b.
Bits/mod : ∀(a: Bits) ∀(b: Bits) Bits
= λa λb
  let zero = #e{}
  let is_zero = (Bits/to_nat b)
  (Bool/if Bits (Nat/is_zero is_zero)
    zero
    (Bits/sub a (Bits/mul b (Bits/div a b))))

