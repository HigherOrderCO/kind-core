// Multiplies two Bits sequences.
// - a: The first Bits sequence.
// - b: The second Bits sequence.
// = The result of bitwise multiplication.
Bits/mul : ∀(a: Bits) ∀(b: Bits) Bits
= λ{
  #e: λb
    #e{}
  #i: λa.pred λb
    let recursive_mul = (Bits/mul a.pred b)
    let shifted_b = (Bits/shift_left b)
    (Bits/add recursive_mul shifted_b)
  #o: λa.pred λb
    let recursive_mul = (Bits/mul a.pred (Bits/shift_left b))
    (Bits/add b recursive_mul)
}
